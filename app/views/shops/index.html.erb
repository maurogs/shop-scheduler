<p id="notice"><%= notice %></p>

<h1><%= t('shops') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name.capitalize %></td>
        <td><%= link_to t('show_schedule'), shop %></td>
      </tr>
    <% end %>
  </tbody>
</table>
