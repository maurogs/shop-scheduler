<p id="notice"><%= notice %></p>

<h1>Shops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name.capitalize %></td>
        <td><%= link_to 'Show Schedule', shop %></td>
      </tr>
    <% end %>
  </tbody>
</table>
